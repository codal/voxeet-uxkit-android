<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right|top">

    <!-- VideoView used to display incoming video streams -->
    <!-- possible scaleType := scale_fill, scale_fit, balanced -->
    <sdk.voxeet.com.toolkit.views.uitookit.nologic.VideoView
        android:id="@+id/selected_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scaleType="scale_fill"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- in minimized mode, show the timer -->
        <LinearLayout
            android:id="@+id/layout_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp">

            <sdk.voxeet.com.toolkit.views.uitookit.sdk.VoxeetTimer
                android:id="@+id/voxeet_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout_participant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:minHeight="@dimen/conference_view_avatar_size"
                android:visibility="gone">

                <!-- dummy view representing the toggle/close -->
                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="6dp" />

                <sdk.voxeet.com.toolkit.views.uitookit.sdk.VoxeetParticipantView
                    android:id="@+id/participant_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:visibility="visible" />

            </LinearLayout>

            <!-- display the current speaker -->
            <sdk.voxeet.com.toolkit.views.uitookit.sdk.VoxeetCurrentSpeakerView
                android:id="@+id/current_speaker_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <!-- local user's video stream -->
        <sdk.voxeet.com.toolkit.views.uitookit.nologic.VideoView
            android:id="@+id/self_video_view"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:visibility="gone"
            app:scaleType="scale_fit"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"/>

        <!-- call action buttons -->
        <sdk.voxeet.com.toolkit.views.uitookit.sdk.VoxeetConferenceBarView
            android:id="@+id/conference_bar_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="36dp"
            android:visibility="gone"
            app:record_button="false" />
    </LinearLayout>


</FrameLayout>